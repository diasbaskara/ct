{
  "env": {
    "browser": true,
    "es2021": true,
    "greasemonkey": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "GM_xmlhttpRequest": "readonly",
    "GM_setValue": "readonly",
    "GM_getValue": "readonly",
    "GM_deleteValue": "readonly",
    "GM_listValues": "readonly",
    "GM_info": "readonly",
    "unsafeWindow": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"]
  }
}