{
  "env": {
    "browser": true,
    "es2021": true,
    "greasemonkey": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "GM_xmlhttpRequest": "readonly",
    "GM_setValue": "readonly",
    "GM_getValue": "readonly",
    "GM_deleteValue": "readonly",
    "GM_listValues": "readonly",
    "GM_info": "readonly",
    "unsafeWindow": "readonly",
    "__VERSION__": "readonly",
    "__dirname": "readonly",
    "SIDEBAR_STATE_KEY": "readonly",
    "GRANT": "readonly",
    "REQUIRE": "readonly"
  },
  "overrides": [
    {
      "files": ["build/**/*.js", "webpack.config.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["cdn/**/*.js", "dist/**/*.js"],
      "rules": {
        "no-console": "off",
        "no-empty": "off",
        "no-case-declarations": "off",
        "no-undef": "off"
      }
    }
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"]
  }
}